#!/bin/bash
###########################################################
# Copyright (c) 2015, Blockbridge Networks LLC.  All rights reserved.
# Use of this source code is governed by a BSD-style license, found
# in the LICENSE file.
#
# Blockbridge docker volume plugin
#
# Options:
#   [logs] tail logs after running
###########################################################
LOGS=$1

###########################################################
# Required parameters
###########################################################
: ${BLOCKBRIDGE_API_HOST="<api-host>"}
: ${BLOCKBRIDGE_API_KEY="<api-key"}

###########################################################
# Check for docker
###########################################################
VERSION=$(docker version -f '{{.Client.Version}}' 2>&1)
if [ $? -ne 0 ]; then
    echo "Unable to determine docker version. Make sure docker 1.8.0+ is installed."
    command -v docker && echo "$(docker version)"
    exit 1
fi

if [[ ! "$VERSION" =~ "1.8" ]]; then
    echo "Docker 1.8.0+ version not found. Please upgrade to docker 1.8.0+."
    command -v docker && echo "$(docker version)"
    exit 1
fi

###########################################################
# Check for iscsid
###########################################################
ISCSID=$(ps ax | grep iscsid | grep -v grep)
if [[ -n "$ISCSID" && ! "$ISCSID" =~ "/bb/iscsid" ]]; then
    echo "$ISCSID"
    echo
    echo "Found running 'iscsid'. The system iscsid is incompatible with the Blockbridge volume driver."
    echo "Please run the following script to disable it first:"
    echo
    echo "https://raw.githubusercontent.com/blockbridge/blockbridge-demo/master/iscsid/disable-host-iscsid.sh"
    exit 1
fi

###########################################################
# run blockbridge docker volume plugin
###########################################################
docker rm -fv blockbridge-volume-driver >/dev/null 2>&1

docker run --name blockbridge-volume-driver                             \
           --detach                                                     \
           --restart always                                             \
           --volume /bb/env:/bb/env                                     \
           --volume /run/docker/plugins/blockbridge:/run/docker/plugins/blockbridge   \
           --volume /run/docker.sock:/run/docker.sock                   \
           -e BLOCKBRIDGE_API_HOST=$BLOCKBRIDGE_API_HOST                \
           -e BLOCKBRIDGE_API_KEY=$BLOCKBRIDGE_API_KEY                  \
           blockbridge/volume-driver

###########################################################
# tail logs if specified
###########################################################
if [ -n "$LOGS" ]; then
    docker logs -f blockbridge-volume-driver
fi
